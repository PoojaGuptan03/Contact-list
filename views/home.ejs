<html>
    <head>
        <title>  
            <%= title%>
        </title>
        <link rel="stylesheet" href="/css/home.css">
        <script src="https://kit.fontawesome.com/6726376c83.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <h1 id="page-heading">
            <i class="fas fa-address-book"></i>
            MY CONTACT LIST!!
        </h1>

        <div id="list-container">
            <ul id="list">
                <%for (let i of contact_list){ %>
                    <div id="list-div">
                    <li class="contact-list-item">
                        <div id="name"><p><%= i.name%></p></div>
                        <div id="phone"><p><%= i.phone%></p></div>
                        <div class="delete-btn">
                            <a href="/delete-content/?id=<%= i.id %>">
                                <i class="fas fa-trash-alt dust"></i>
                            </a>
                        </div>
                    </li>
                    </div>
                <%}%>
            </ul>
        </div>
        <form id="form" action="/create-contact/" method="POST">
            <input class="usn-ph" type="text" name="name" placeholder="Username" required>
            <input class="usn-ph" type="number" name="phone" placeholder="Mob no" required>
            <button id="add-btn" type="submit">Add</button>
        </form>

        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>